{
  // 버전 설정으로, 서버 환경에 맞춰서 설정 가능
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    // 컴파일 결과 생성되는 파일들을 `dist` 폴더 내에 따로 생성되게 됨
    "outDir": "dist",
    // 매개변수와 같은 타입을 엄격하게 볼 것인가?
    "strict" : false,
    "moduleDetection": "force"
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src"]
}
